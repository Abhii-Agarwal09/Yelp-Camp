<%- layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Camground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT "
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <!-- title -->
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= campground.title %> "
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- location -->
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= campground.location %> "
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- price -->
      <div class="mb-3">
        <label class="form-label" for="price">Camground price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            name="campground[price]"
            type="text"
            id="price"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            value="<%= campground.price %> "
            required
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- image -->
      <div class="input-group mb-3 custom-file">
        <input
          type="file"
          class="form-control"
          id="image"
          name="image"
          multiple
        />
        <label class="input-group-text" for="image">Upload</label>
      </div>
      <!-- description -->
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        >
<%= campground.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- displaying existing images -->
      <div class="mb-3">
        <% campground.images.forEach(function(img, index) { %>
        <img src="<%= img.url %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
            <input type="checkbox" name="deleteImages[]" id="image-<%= index %>" value="<%= img.filename %>">
        </div>
        <label for="image-<%= index %>">Delete?</label>
        <% }) %>
      </div>
      <!-- update button -->
      <div class="mb-3">
        <button class="btn btn-info">Update campground</button>
      </div>
    </form>
    <!-- back button -->
    <a href="/campgrounds/<%= campground._id %> ">Back to campground</a>
  </div>
</div>
